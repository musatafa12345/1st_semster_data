#include<iostream>
using namespace std;

void calculateavg()
{
	int a,b,c,d;
	cout<<"Enter 1st subject marks"<<endl;
	cin>>a;
	cout<<"Enter 2nd subject marks"<<endl;
	cin>>b;
	cout<<"Enter 3rd subject marks"<<endl;
	cin>>c;
	cout<<"Enter 4th subject marks"<<endl;
	cin>>d;
	
cout<<"Average is this= "<<(a+b+c+d)/4.0;	
}
/////////////body//////////////
int main()
{
	int n,a,b,c,d;
	cout<<"Enter 1 for avg calculation"<<endl;
	cin>>n;
	if(n==1)		
	void calculateavg();
		return 0;
		system("pause");
	
						
}


	

